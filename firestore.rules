rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /faqItems/{faqId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /supportRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if false;
    }

    match /eventTemplates/{templateId} {
      allow read, write: if false;
    }

    match /events/{eventId} {
      allow read: if request.auth != null && resource.data.status == "published";
      allow write: if false;
    }

    match /eventSignups/{signupId} {
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    match /eventCharges/{chargeId} {
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      allow write: if false;
    }

    match /materialsOrders/{orderId} {
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      allow write: if false;
    }

    match /profiles/{profileId} {
      allow read: if request.auth != null && request.auth.uid == profileId;
      allow create, update: if request.auth != null && request.auth.uid == profileId;
      allow delete: if false;
    }

    match /reservations/{reservationId} {
      allow create: if request.auth != null
        && request.resource.data.ownerUid == request.auth.uid
        && request.resource.data.status == "REQUESTED";
      allow read: if request.auth != null && resource.data.ownerUid == request.auth.uid;
      allow update, delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
