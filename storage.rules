rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isStaff() {
      return request.auth.token.staff == true
        || (request.auth.token.roles is list && request.auth.token.roles.hasAny(["staff"]));
    }

    match /checkins/{uid}/{allPaths=**} {
      allow read: if isSignedIn() && (request.auth.uid == uid || isStaff());
      allow write: if isSignedIn()
        && (request.auth.uid == uid || isStaff())
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches("image/.*");
    }

    match /profileAvatars/{uid}/{fileName} {
      allow read: if isSignedIn() && (request.auth.uid == uid || isStaff());
      allow write: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.size < 3 * 1024 * 1024
        && request.resource.contentType.matches("image/(png|jpeg|gif|webp)");
      allow delete: if isSignedIn() && request.auth.uid == uid;
    }

    match /glazes/{family}/combos/{comboId}/{date}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isStaff()
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches("image/.*");
      allow delete: if isStaff();
    }

    match /glazes/{family}/singles/{glazeId}/{date}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isStaff()
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches("image/.*");
      allow delete: if isStaff();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
